<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app error-url="">
    <class-loader delegate="true"/>
    <jsp-config>
        <property name="keepgenerated" value="true">
            <description>Keep a copy of the generated servlet class' java code.</description>
        </property>
    </jsp-config>
    <security-role-mapping>
        <role-name>UserCRUDRole</role-name>
        <group-name>ADMINISTRATOR</group-name>
        <group-name>DIRECTOR_GENERAL</group-name>
    </security-role-mapping>
    
    <security-role-mapping>
        <role-name>PositionCRUDRole</role-name>      
        <group-name>DIRECTOR_GENERAL</group-name>
        <group-name>DIRECTOR_DEPARTAMENT</group-name>
        <group-name>DIRECTOR_HR</group-name>
        <group-name>RECRUITER</group-name>
    </security-role-mapping>
    
    <security-role-mapping>
        <role-name>PositionDeleteRole</role-name>      
        <group-name>DIRECTOR_GENERAL</group-name>
    </security-role-mapping>
    
    <security-role-mapping>
        <role-name>CandidateCRUDRole</role-name>      
        <group-name>DIRECTOR_GENERAL</group-name>
        <group-name>RECRUITER</group-name>
    </security-role-mapping>
    
    <security-role-mapping>
        <role-name>CommentsCRUDRole</role-name>      
        <group-name>DIRECTOR_GENERAL</group-name>
        <group-name>DIRECTOR_DEPARTAMENT</group-name>
        <group-name>DIRECTOR_HR</group-name>
        <group-name>RECRUITER</group-name>
    </security-role-mapping>
    
    <security-role-mapping>
        <role-name>ViewerRole</role-name>
        <group-name>VIEWER</group-name>    
    </security-role-mapping>
    
    <security-role-mapping>
        <role-name>PositionRole</role-name>
        <group-name>DIRECTOR_GENERAL</group-name>
        <group-name>DIRECTOR_DEPARTAMENT</group-name>
        <group-name>DIRECTOR_HR</group-name>
        <group-name>RECRUITER</group-name>
        <group-name>VIEWER</group-name>    
    </security-role-mapping>
    
    
</glassfish-web-app>
